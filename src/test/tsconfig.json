{
    "compilerOptions": {
        "incremental": true,
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "../..",
        "rootDir": "src",
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": false,
        "lib": ["es2022"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": [
        "../**/*"
    ]
}
